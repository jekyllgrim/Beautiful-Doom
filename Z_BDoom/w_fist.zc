//spawned by light attacks and used as a base puff class
Class ModernFistPuff : BdoomPuff {
	Default {
		+PUFFGETSOWNER
		+PUFFONACTORS
		+NOEXTREMEDEATH
		attacksound "Mweapons/fist/punch";
		seesound "Mweapons/fist/punch";
		mass 1;
	}
	states {
	Crash:
		TNT1 A 1 {
			if (target)
				A_SetPitch(target.pitch+frandom(-1,1),SPF_INTERPOLATE,AAPTR_TARGET);
		}
		stop;
	melee:
		TNT1 A 1 {
			if(target) {
				let bdfist = BD_Fist (target.player.readyweapon);
				if (bdfist) {
					bdfist.tcombo++;
					if (bdfist.hurtchance > random(0,100) || FindInventory("ModernBerserk_Regen")) {
						bFORCEPAIN = true;
					}
				}
			}
			A_SetPitch(target.pitch+frandom(-1,1),SPF_INTERPOLATE,AAPTR_TARGET);
		}
		stop;
	}		
}

